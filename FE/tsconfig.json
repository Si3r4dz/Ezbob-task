
{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "jsx": "react",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,

    },
    "include": ["./src",],
    "exclude": ["node_modules"],
    "typeRoots": ["./node_modules/@types", "./src/types"]
}